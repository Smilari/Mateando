---
import { Image } from "astro:assets";

const {title, description, image, alt, Icon} = Astro.props;
---

<div class="bg-white flex flex-col justify-between p-6 rounded-lg shadow-lg hover:shadow-xl transform transition-transform duration-300 hover:scale-105">
    <h3 class="flex items-center text-xl font-bold text-green-700 mb-4">
      {Icon &&
              <Icon class="w-8 h-8 mr-2"/>}
      {title}
    </h3>
    <p class="text-gray-700 mb-4">{description}</p>
    <Image src={image} alt={alt} class="w-full h-48 object-cover rounded-md"/>
</div>
