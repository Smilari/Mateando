<section id="historia" class="py-20 bg-beige-100">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-5xl font-bold text-brown-800 mb-12 text-center">
            Historia y Origen del Mate
        </h2>
        <div class="relative">
            <div class="absolute h-full w-1 bg-green-500 left-1/2 transform -translate-x-1/2"></div>
            <div class="timeline-item" data-aos="fade-right">
                <div class="bg-white p-6 rounded-lg shadow-lg mb-8 ml-16 md:w-5/12">
                    <h3 class="text-xl font-bold text-green-700 mb-2">Siglo XVI</h3>
                    <p class="text-gray-700">Los guaraníes introducen el mate a los colonizadores españoles.</p>
                </div>
            </div>
            <div class="timeline-item" data-aos="fade-left">
                <div class="bg-white p-6 rounded-lg shadow-lg mb-8 mr-16 md:ml-auto md:w-5/12">
                    <h3 class="text-xl font-bold text-green-700 mb-2">Siglo XVII</h3>
                    <p class="text-gray-700">El mate se extiende por toda la región del Río de la Plata.</p>
                </div>
            </div>
            <div class="timeline-item" data-aos="fade-right">
                <div class="bg-white p-6 rounded-lg shadow-lg mb-8 ml-16 md:w-5/12">
                    <h3 class="text-xl font-bold text-green-700 mb-2">Siglo XIX</h3>
                    <p class="text-gray-700">El mate gana popularidad global como bebida saludable.</p>
                </div>
            </div>

            <div class="timeline-item" data-aos="fade-left">
                <div class="bg-white p-6 rounded-lg shadow-lg mb-8 mr-16 md:ml-auto md:w-5/12">
                    <h3 class="text-xl font-bold text-green-700 mb-2">Siglo XXI</h3>
                    <p class="text-gray-700">El mate se convierte en bebida nacional en Argentina y Uruguay.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
  import AOS from 'aos';
